#include <stdio.h>

#define NUM_ESTADOS 8
#define NUM_CIDADES 4

typedef struct {
    char codigo[4];    // Ex: "A01"
    int populacao;
    float area;
    float pib;
    int pontos_turisticos;
} Carta;

int main() {
    Carta cartas[NUM_ESTADOS * NUM_CIDADES];
    int total_cartas = NUM_ESTADOS * NUM_CIDADES;

    printf("Cadastro de cartas - Super Trunfo: Países\n");
    printf("Serão cadastradas %d cartas (cidades).\n\n", total_cartas);

    char estados[NUM_ESTADOS] = {'A','B','C','D','E','F','G','H'};

    // Cadastro
    for (int i = 0; i < NUM_ESTADOS; i++) {
        for (int j = 0; j < NUM_CIDADES; j++) {
            int idx = i * NUM_CIDADES + j;
            // Monta o código da carta, ex: A01
            sprintf(cartas[idx].codigo, "%c0%d", estados[i], j+1);

            printf("Cadastro da carta %s:\n", cartas[idx].codigo);
            printf("População: ");
            scanf("%d", &cartas[idx].populacao);

            printf("Área (km2): ");
            scanf("%f", &cartas[idx].area);

            printf("PIB (em milhões): ");
            scanf("%f", &cartas[idx].pib);

            printf("Número de pontos turísticos: ");
            scanf("%d", &cartas[idx].pontos_turisticos);

            printf("\n");
        }
    }

    // Exibição
    printf("\n=== Cartas cadastradas ===\n");
    for (int i = 0; i < total_cartas; i++) {
        printf("Carta %s:\n", cartas[i].codigo);
        printf("População: %d habitantes\n", cartas[i].populacao);
        printf("Área: %.2f km2\n", cartas[i].area);
        printf("PIB: %.2f milhões\n", cartas[i].pib);
        printf("Pontos turísticos: %d\n\n", cartas[i].pontos_turisticos);
    }

    return 0;
}
