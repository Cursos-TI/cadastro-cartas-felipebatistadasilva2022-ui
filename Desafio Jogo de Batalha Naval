#include <stdio.h>

#define TAM 3  
#define NAVIOS 2

int main() {
    char tab[TAM][TAM];
    int i, j;
    int linha, coluna;
    int acertos = 0;

    
    for(i=0; i<TAM; i++) {
        for(j=0; j<TAM; j++) {
            tab[i][j] = '-';
        }
    }

    tab[0][1] = 'N';
    tab[2][2] = 'N';

    printf("=== Jogo Batalha Naval Simples ===\n");

    while(acertos < NAVIOS) {
        
    
        printf("  0 1 2\n");
        for(i=0; i<TAM; i++) {
            printf("%d ", i);
            for(j=0; j<TAM; j++) {
                if(tab[i][j] == 'X')
                    printf("X ");
                else if(tab[i][j] == 'O')
                    printf("O ");
                else
                    printf("- ");
            }
            printf("\n");
        }

        
        printf("Digite linha e coluna (0 a 2): ");
        scanf("%d %d", &linha, &coluna);

        
        if(linha >= 0 && linha < TAM && coluna >= 0 && coluna < TAM) {
            if(tab[linha][coluna] == 'N') {
                printf("Acertou um navio!\n");
                tab[linha][coluna] = 'X'; 
                acertos++;
            } else if(tab[linha][coluna] == '-') {
                printf("Água!\n");
                tab[linha][coluna] = 'O';
            } else {
                printf("Essa posição já foi tentada.\n");
            }
        } else {
            printf("Coordenadas inválidas!\n");
        }
    }

    printf("Parabéns! Você afundou todos os navios!\n");
    return 0;
}
