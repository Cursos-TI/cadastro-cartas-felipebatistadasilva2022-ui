#include <stdio.h>

typedef struct {
    char nome[20];
    int ataque;
    int defesa;
    int magia;
} Carta;

int main() {
    Carta jogador = {"Dragao", 8, 6, 7};
    Carta computador = {"Goblin", 5, 7, 4};
    int escolha;

    printf("=== Jogo Super Trunfo Simplificado ===\n");
    printf("Sua carta: %s\n", jogador.nome);
    printf("Atributos: 1- Ataque(%d), 2- Defesa(%d), 3- Magia(%d)\n", jogador.ataque, jogador.defesa, jogador.magia);
    printf("Escolha o atributo para comparar (1-3): ");
    scanf("%d", &escolha);

    int valorJogador, valorComputador;

    if(escolha == 1) {
        valorJogador = jogador.ataque;
        valorComputador = computador.ataque;
    } else if(escolha == 2) {
        valorJogador = jogador.defesa;
        valorComputador = computador.defesa;
    } else if(escolha == 3) {
        valorJogador = jogador.magia;
        valorComputador = computador.magia;
    } else {
        printf("Escolha inválida!\n");
        return 1;
    }

    printf("Computador tem a carta: %s\n", computador.nome);
    printf("Valores escolhidos: Jogador %d x Computador %d\n", valorJogador, valorComputador);

    if(valorJogador > valorComputador) {
        printf("Você ganhou!\n");
    } else if(valorJogador < valorComputador) {
        printf("Você perdeu!\n");
    } else {
        printf("Empate!\n");
    }

    return 0;
}
